    </script>
    <script type="text/javascript">
        //设置第一列和最后一列的背景色为orange  btnSetRowColor

        $().ready(function () {
            $("#btnSetRowColor").click(function () {
                alert("第一列和最后一列背景色");
                $("#table>tbody>tr").each(function (index, node) {
                    $(node).children().eq(1).css("background-color", "orange");
                    $(node).children().last().css("background-color", "orange");
                });
            });
        });
    </script>
    <script type="text/javascript">
        var node;
        //1.删除选中行  btnRemove
        //设置选中行的外边框加粗显示，考虑多行的可能 btnSetLineStyle
        $().ready(function () {
            $("#btnRemove").click(function () {
                alert("选中行删除");
                var node2 = $("input:checked").parent().parent();
                node = node2.detach();
            });
        });
        //2.将删除的行还原到第一行   btnRecover
        $().ready(function () {
            $("#btnRecover").click(function () {
                alert("选中行恢复");
                $(node).insertBefore("#table>tbody");
            });
        });
    </script>wrapAll
    <script type="text/javascript">
                //将数量一列中的数字包含在p标签中  btnInnerWrap
        $().ready(function () {
            $("#btnInnerWrap").click(function () {
                alert("最后一列包裹");
                $("#table>tbody>tr").each(function (index, node) {
                    $(node).children().last().wrap("<p></p>");
