    <script type="text/javascript">
        //实现复制选中行的功能，只考虑单行，复制出来的行在被复制行的下面，并且字体变红  btnCopy
        $().ready(function () {
            $("#btnCopy").click(function () {
                alert("复制");
                var check = $("input:checked").parent().parent();
                check.after(check.clone().css("color", "red"));
            });
        });
    </script>
    <script type="text/javascript">
        //实现表中数据隔行背景变色 green/yellow  btnSetDoubleColor
        $().ready(function () {
            $("#btnSetDoubleColor").click(function () {// {
                alert("变色");
                $("#table>tbody>tr:even").css("background-color", "green");
                $("#table>tbody>tr:odd").css("background-color", "yellow");
            });
        });
    </script>
    <script type="text/javascript">
