
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>登陆系统</title>
    <link href="~/Content/LoginView.css" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-3.3.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.form.js")" type="text/javascript"></script>
    <script src="~/Scripts/LoginView.js" type="text/javascript"></script>
    <script src="~/Scripts/AJAX.js" type="text/javascript"></script>
</head>
<body>
    <h1>员&nbsp;工&nbsp;评&nbsp;测&nbsp;系&nbsp;统</h1>
    <h3>用&nbsp;户&nbsp;登&nbsp;陆</h3>
    <div id="login">
        <form id="LoginCheck">
            <label id="UserName">用户账号：</label><input type="text" name="UserName" class="textSize" onfocus="ClearMessage()"/><label id="messageUserName">@ViewBag.Message</label><br />
            <label id="Password">用户密码：</label><input type="password" name="Password" class="textSize" onfocus="ClearMessage()" /><label id="messagePassword">@ViewBag.Message</label><br />
            <input id="submit" type="button" value="登&nbsp;陆" class="buttonSize" onclick="GetLogin()" /><input id="reg" type="button" value="注&nbsp;册" onclick="return Regist()" class="buttonSize" />
        </form>
    </div>
</body>
</html>